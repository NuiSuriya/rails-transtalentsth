<%# LATEST BLOGS %>
<div class="container pt-3" id="posts-anchor">
  <h1 class="text-blue text-center mt-5 mb-lg-5 mb-sm-3" style="font-weight: 700">
    Latest Blogs
  </h1>

  <%# Display BlogPosts %>
  <div class="container" style="margin-top: 80px;">
    <div class="row">
      <% @blog_posts.each do |post| %>
        <div class="col-md-4 col-12 mb-5"> <!-- Use col-md-4 for medium screens and col-sm-6 for small screens -->
          <%= link_to blog_post_path(post), class: 'text-decoration-none text-dark' do %>
            <div class="card border border-0 bg-white">
              <div class="card-img-container square-container"
                  style="background-image: url('<%= cl_image_path post.photos.first.key%>');">
              </div>
            </div>

            <h3 class="pt-4" style="font-weight: 600; font-size: 1.6em">
              <%= post.title %>
            </h3>

            <p class="card-text mt-4 pb-5" style='font-weight: 400; font-size: 1em;'>
              <%= raw(truncate(strip_tags(post.content.html_safe), length: 200)) %>
            </p>

            <%= link_to "Read More", blog_post_path(post), class: 'text-white py-2 btn-blue' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

